@model IEnumerable<OnlineLib.Models.Book>

@{
    ViewBag.Title = "Books List";
}

<h2>@ViewBag.Name</h2>

<p>
   @if(ViewBag.Worker) { @Html.ActionLink("Add new book", "Add", "Books",new  object(),new {@lib = ViewBag.Library, @class="btn btn-primary"})}
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lended)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Isbn)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Autor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lended)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Isbn)
        </td>
        <td>
            @if (ViewBag.Worker)
            {
                @Html.ActionLink("Edit", "Edit","Books",new object() ,new {id = item.Id,@class = "btn btn-sm btn-default" })
                @Html.ActionLink("Drukuj", "PdfGeneratorBook","Books",new object(), new { id = item.Id , @class = "btn btn-sm btn-success" })
                 
                @Html.ActionLink("Delete", "Delete","Books",new object(), new { id = item.Id,  @class = "btn btn-sm btn-danger" }) 
            }
           @Html.ActionLink("Zarezerwuj", "Index", "Books",new object(), new { id = item.Id, @class= "btn btn-sm btn-info" })
        </td>
    </tr>
}

</table>
