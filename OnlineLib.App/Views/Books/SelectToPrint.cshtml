@model List<OnlineLib.Repository.ViewModels.BookToPrint>

@{
    ViewBag.Title = "SelectToPrint";

}

<h2>SelectToPrint</h2>

@using (Html.BeginForm("SelectToPrint", "Books", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <input type="hidden" id="lib" name="lib" value="@ViewBag.Library" />


        <table class="table">
            <tr>
                <th></th>
                <th>
                    Print:
                </th>
                <th>
                    Title:
                </th>
                <th>
                    Autor:
                </th>
                <th>
                    Isbn:
                </th>
            </tr>

            @for (int i = 0; i < Model.Count(); i++)

            {
                <tr>
                    <td>
                        @Html.Hidden("model[" + (@i) + "].Book.Id", Model[i].Book.Id)
                        @Html.CheckBox("model[" + (@i) + "].Print", Model[i].Print)
                    </td>

                    <td>
                        @Html.Display(Model[i].Book.Title)
                    </td>
                    <td>
                        @Html.Display(Model[i].Book.Autor)
                    </td>
                    <td>
                        @Html.Display(Model[i].Book.Isbn)
                    </td>
                </tr>
            }

        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Print Selected" class="btn btn-default" />
            </div>
        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
