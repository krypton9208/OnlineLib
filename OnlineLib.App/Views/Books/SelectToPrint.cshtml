@model List<OnlineLib.Repository.ViewModels.BookToPrint>

@{
    ViewBag.Title = "SelectToPrint";

}

<h2>Select books to print labels</h2>

@using (Html.BeginForm("SelectToPrint", "Books", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal formbox col-sm-12"style="padding: 20px 20px 20px 20px">
        <input type="hidden" id="lib" name="lib" value="@ViewBag.Library" />


        <table class="table">
            <thead>
            <tr>
                <th style="width: 2%">
                    Print:
                </th>
                <th>
                    Title:
                </th>
                <th>
                    Autor:
                </th>
                <th>
                    Isbn:
                </th>
            </tr>
            </thead>
            <tbody>
                @for (  int i = 0; i < Model.Count(); i++)

                {
                    <tr>
                        <td>
                            @Html.Hidden("model[" + (@i) + "].Book.Id", Model[i].Book.Id)
                            @Html.CheckBox("model[" + (@i) + "].Print", Model[i].Print)
                        </td>

                        <td>
                            @Model[i].Book.Title
                        </td>
                        <td>
                            @Model[i].Book.Autor
                        </td>
                        <td>
                            @Model[i].Book.Isbn
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="form-group">
            <div class="pull-left">
                @Html.ActionLink("Back to List", "Index", new object(), new { @class = "btn  btn-default pull-left" })

                
            </div>
            <div class="pull-right">
                <input type="submit" value="Print Selected" class="btn btn-default"/>
            </div>
        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
