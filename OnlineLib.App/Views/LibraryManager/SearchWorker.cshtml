
@{
    ViewBag.Title = "Search Worker";
}

@if (ViewBag.StatusMessage != null)
{
    <div class="formbox col-sm-4 col-sm-offset-3">
        <p class="text-danger"> @ViewBag.StatusMessage</p>
    </div>
}
else
{
    
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal formbox col-sm-6 col-sm-offset-3">
        <h3>Enter email of person who wants work in your's Library</h3>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input type="hidden" id="lib" name="lib" value="@ViewBag.Library" />
        <div class="form-group">
            @Html.Label("email: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("email", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div>
            @Html.ActionLink("Back to List", "Index", new object(), new { @class = "btn  btn-default pull-left " })
            <input type="submit" value="Invate to work" class="btn btn-primary col-md-offset-3" />
        </div>
    </div>
}
