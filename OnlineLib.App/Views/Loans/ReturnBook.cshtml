@model OnlineLib.Models.LoanActivity

@{
    ViewBag.Title = "ReturnBook";
}

<h2>ReturnBook</h2>


@using (Html.BeginForm("ReturnBook", "Loans", FormMethod.Post, new { onkeydown = "return event.keyCode!=13" }))

{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>LoanActivity</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

